{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",

        "paths": {
            "@/*": ["./src/*"],
            "@common/*": ["../../common/*"],
            "@common-server/*": ["../common/*"]
        },

        "sourceMap": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.ts"],
}