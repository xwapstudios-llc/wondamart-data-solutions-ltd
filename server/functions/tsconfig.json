{
    "compilerOptions": {
        "module": "NodeNext",
        "esModuleInterop": true,
        "moduleResolution": "nodenext",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./src/*"],
            "@common/*": ["../../common/*"],
            "@common-server/*": ["../common/*"]
        },
    },
    "include": ["src"],
    "compileOnSave": false
}
