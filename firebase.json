{
    "firestore": {
        "database": "(default)",
        "location": "us-central1",
        "rules": "common/firebase/rules/firestore.rules",
        "indexes": "common/firebase/rules/firestore.indexes.json"
    },
    "functions": [
        {
            "source": "server/functions",
            "codebase": "default",
            "disallowLegacyRuntimeConfig": true,
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log",
                "*.local"
            ],
            "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
        }
    ],
    "storage": {
        "rules": "common/firebase/rules/storage.rules"
    },
    "emulators": {
        "auth": {
            "host": "localhost",
            "port": 9099
        },
        "functions": {
            "host": "localhost",
            "port": 5001
        },
        "firestore": {
            "host": "localhost",
            "port": 8080
        },
        "storage": {
            "host": "localhost",
            "port": 9199
        },
        "ui": {
            "host": "localhost",
            "enabled": true
        },
        "singleProjectMode": true
    }
}
