{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./src",
        "outDir": "./dist",

        "paths": {
            "@common/*": ["./../common/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.ts"],
}